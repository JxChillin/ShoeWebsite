<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shoes</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Shoes.styles.css" asp-append-version="true" />
</head>
@*body and privacy colors change*@
<body class="Grad">
    @*
        -div class Grad here only makes the head color change
        -editing "body" does change the color of the actual body text
    *@
    <header class="">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light mb-3">
            <div class="container">
                <a class=" navbar-brand text-white" asp-area="" asp-page="/Index">Home</a>
                @* This block of code can be uncommented to create inline Navigation Bar
                <a class="nav-link text-white uline" asp-area="" asp-page="/Gallery">Gallery</a>
                <a class="nav-link text-white " asp-area="" asp-page="/Privacy">Privacy</a>
                <a class="nav-link text-white " asp-page="/Privacy">Favorites</a>*@


                @*This code creates a staggered look for the navigation bar, Home button bigger than the preceding
                    buttons*@
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white uline" asp-area="" asp-page="/Gallery">Gallery</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white " asp-area="" asp-page="/Privacy">Favorites</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white " asp-page="/Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        &copy; 2023 | Shoes
        @*<a asp-area="" asp-page="/Privacy">Privacy</a>*@


        @*<div class="container">
            &copy; 2023 | Shoes | <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>*@
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
